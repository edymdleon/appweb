@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingreso</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png" />
    <link href="~/assets/libs/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/libs/bootstrap/dist/css/select2-bootstrap4.css" rel="stylesheet" />
    <link href="~/assets/libs/chartist/dist/chartist.min.css" rel="stylesheet" />
    <link href="~/js/pages/chartist/chartist-init.css" rel="stylesheet" />
    <link href="~/assets/libs/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.css" rel="stylesheet" />
    <link href="~/assets/libs/c3/c3.min.css" rel="stylesheet" />
    <link href="~/assets/libs/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/style_Nuevo.css" rel="stylesheet" />
    <link href="~/css/style_tablas.css" rel="stylesheet" />
    <link href="~/css/PagedList.css" rel="stylesheet" />

</head>
<body class="contenedorLogin">
    
    <div>
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div>
                    <hr />
                    @using (Html.BeginForm("ExisteUsuario", "Login", FormMethod.Post))
                    {

                        <div class="card position-fixed">
                            <div class="card-body">
                                <h3>Ingreso al sistema</h3>
                                <table>
                                    <tr>
                                        <td>Nombre de Usuario</td>
                                        <td><input type="text" name="user" id="user" required /></td>
                                    </tr>
                                    <tr>
                                        <td>Password</td>
                                        <td><input type="password" name="pass" id="pass" required /></td>
                                    </tr>
                                    <br>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td><button class="btn btn-primary" style="margin-right: 1px; margin-top: 1px;" type="submit" value="Enviar"><span class="">Ingresar</span></button></td>
                                        <td><span style="color:red;">@ViewBag.Mensaje</span></td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                        
                    }
                </div>
            </div>
        </div>
</body>
</html>
<script type="text/javascript">
    function Validar() {
        var user = $('#user').val();
        location.href = 'Login?User=' + user;
    }
</script>